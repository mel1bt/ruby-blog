<div style="width:80%; margin:0 auto;">
  <h1>Crear artículos</h1>
  <%= form_for(@article) do |f| %>
    <div class="field">
      <%= f.text_field :title, placeholder:"Título", class:"form-control"%>
    </div>
    <div class="field">
      <%= f.text_area :body, placeholder:"Escribe aquí un articulo", style:"height:300px;", class:"form-control" %>
    </div>
    <div class="field">
      <%= f.submit "Guardar", class:"btn be-red white"%>
    </div>
  <%end%>
</div>
